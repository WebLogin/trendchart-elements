{
    "compilerOptions": {
        "target": "es2017",
        "module": "es2015",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "lib": ["es2017", "dom"],
        "strict": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "useDefineForClassFields": false,
        "importHelpers": true,
        "outDir": "dist",
        "rootDir": "src",
        "declaration": true
    },
    "include": ["src/**/*.ts"]
}
